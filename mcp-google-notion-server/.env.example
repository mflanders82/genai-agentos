# MCP Server Configuration

# Server Settings
SERVER_NAME="Google-Notion MCP Server"
SERVER_VERSION="0.1.0"
DEBUG=false
LOG_LEVEL=info

# Tool Settings
TOOL_TIMEOUT=30.0
MAX_CONCURRENT_TOOLS=10

# Metrics (optional)
METRICS_ENABLED=false
METRICS_PORT=8080

# Transport Configuration
TRANSPORT_TYPE=stdio  # stdio, websocket, or http
# TRANSPORT_URI=ws://localhost:8080/mcp  # for websocket
# TRANSPORT_URI=http://localhost:8080    # for http
# TRANSPORT_PORT=8080
TRANSPORT_HOST=localhost
TRANSPORT_CONNECT_TIMEOUT=10.0
TRANSPORT_READ_TIMEOUT=30.0
TRANSPORT_WRITE_TIMEOUT=10.0
TRANSPORT_MAX_CONNECTIONS=100
TRANSPORT_MAX_KEEPALIVE=20
TRANSPORT_POLL_INTERVAL=1.0

# Google API Configuration
GOOGLE_ENABLED=false
GOOGLE_CLIENT_CONFIG_FILE=google_client_config.json
GOOGLE_TOKEN_FILE=google_token.json
# Alternative: set credentials directly
# GOOGLE_CREDENTIALS={"token": "...", "refresh_token": "...", ...}

# Notion Configuration
NOTION_ENABLED=false
NOTION_API_TOKEN=secret_your-notion-integration-token
NOTION_TIMEOUT_MS=30000

# Security (for HTTP/WebSocket transports)
# TLS_ENABLED=true
# TLS_CERT_FILE=server.crt
# TLS_KEY_FILE=server.key

# Rate Limiting (for HTTP transport)
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=60

# Connection Pooling
# MAX_POOL_SIZE=20
# POOL_TIMEOUT=30

# Retry Configuration
# MAX_RETRIES=3
# RETRY_DELAY=1.0
# RETRY_BACKOFF=2.0
